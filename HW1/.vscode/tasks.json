{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "matlab",
            "type": "shell",
            "command": "matlab",
            "args": [
                "-nodesktop",
                "-nosplash",
                "-nodisplay",
                "-r",
                "\"run('${file}')\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}